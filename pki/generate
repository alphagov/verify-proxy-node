proxy_node_config = {
  'id' => '_entities',
  'entity_id' => options.proxy_entity_id,
  'sso_uri' => "#{options.proxy_url}/SAML2/SSO/POST",
  'organization' => { 'name' => 'eIDAS Service', 'display_name' => 'eIDAS Service', 'url' => options.proxy_url },
  'signing_certificates' => [
